            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#D3CDCD"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_below="@id/img_apphelpline"/>

        <ImageView
            android:id="@+id/img_appshare"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_share"
            android:layout_below="@id/view10"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:onClick="shareApp"
            android:id="@+id/appshare"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/shareappothers"
            android:layout_marginStart="15dp"
            android:textSize="18sp"
            android:textColor="#615A5A"
            android:fontFamily="@font/lato_bolditalic"
            android:layout_below="@id/view10"
            android:layout_toEndOf="@id/img_appshare"
