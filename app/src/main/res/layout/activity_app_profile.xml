            <TextView
                android:id="@+id/addHelpline"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/addnewhelpline"
                android:layout_marginStart="15dp"
                android:textSize="18sp"
                android:textColor="#615A5A"
                android:visibility="gone"
                android:fontFamily="@font/lato_bolditalic"
                android:layout_below="@id/appshare"
                android:layout_marginTop="20dp"/>

            <TextView
        android:id="@+id/addHotspot"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/addnewhotspot"
        android:layout_marginStart="15dp"
        android:textSize="18sp"
        android:textColor="#615A5A"
        android:fontFamily="@font/lato_bolditalic"
        android:layout_below="@id/addHelpline"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>

            <TextView
                android:id="@+id/addVideo"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="@string/addnewvideo"
