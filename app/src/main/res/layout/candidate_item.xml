<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cand_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:padding="5dp"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/txt_cand_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:text="Name"
            android:padding="5dp"
            android:textSize="20sp"
            android:layout_below="@id/cand_name"/>


        <TextView
            android:id="@+id/cand_purpose_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Purpose Details"
            android:padding="5dp"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20sp"
            android:layout_below="@id/txt_cand_name"/>

        <TextView
            android:id="@+id/txt_cand_purpose_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:text="Purpose Details"
            android:padding="5dp"
            android:textSize="20sp"
            android:layout_below="@id/cand_purpose_details"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/relative">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/cand_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source"
                android:padding="5dp"
                android:fontFamily="@font/poppins_bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_cand_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="Source"
                android:padding="5dp"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/cand_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Destination"
                android:padding="5dp"
                android:fontFamily="@font/poppins_bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt_cand_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="Destination"
                android:padding="5dp"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>