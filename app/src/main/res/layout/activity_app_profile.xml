        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#D3CDCD"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_below="@id/img_appinfo"/>

        <ImageView
            android:id="@+id/img_appreport"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_report_problem"
            android:layout_below="@id/view8"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/appreport"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/reportproblem"
            android:layout_marginStart="15dp"
            android:textSize="18sp"
            android:textColor="#615A5A"
            android:fontFamily="@font/lato_bolditalic"
            android:layout_below="@id/view8"
            android:layout_toEndOf="@id/img_appreport"
            android:layout_marginTop="20dp"/>

        <View
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#D3CDCD"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_below="@id/img_appreport"/>

        <ImageView
            android:id="@+id/img_apphelpline"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_call"
            android:layout_below="@id/view9"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:onClick="helpLineNumber"
            android:id="@+id/apphelpline"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/emergencyhelplinenumber"
            android:layout_marginStart="15dp"
            android:textSize="18sp"
            android:textColor="#615A5A"
            android:fontFamily="@font/lato_bolditalic"
            android:layout_below="@id/view9"
            android:layout_toEndOf="@id/img_apphelpline"
