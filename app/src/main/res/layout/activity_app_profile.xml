    <Button
        android:id="@+id/button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/view3"
        android:layout_toEndOf="@id/userinfo_app_color"
        android:background="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/userinfo_app_color"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@id/view3"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-4dp"
        android:layout_toEndOf="@id/img_language"
        android:fontFamily="@font/lato_bolditalic"
        android:text="My App Color"
        android:textColor="#615A5A"
        android:textSize="18sp" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3CDCD"
        android:layout_marginTop="10dp"
        android:layout_marginStart="0dp"
        android:layout_below="@id/userinfo_app_color"/>

    <ImageView
        android:id="@+id/img_password"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_lock"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold"
        android:textAlignment="center"
        android:layout_below="@id/view4"
        android:layout_marginTop="18dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:onClick="changePassword"
        android:id="@+id/userinfo_change_password"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Change Password"
        android:layout_marginStart="15dp"
        android:textSize="18sp"
        android:textColor="#615A5A"
        android:fontFamily="@font/lato_bolditalic"
        android:layout_below="@id/view4"
        android:layout_toEndOf="@id/img_password"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3CDCD"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_below="@id/userinfo_change_password"/>

    <ImageView
        android:id="@+id/img_screen_lock"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_lock"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold"
        android:textAlignment="center"
        android:layout_below="@id/view5"
        android:layout_marginTop="18dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/userinfo_screen_lock"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/view5"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@id/img_screen_lock"
        android:fontFamily="@font/lato_bolditalic"
        android:text="Disable Screen Lock"
        android:textColor="#615A5A"
        android:textSize="18sp" />


    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toEndOf="@+id/userinfo_screen_lock"
        android:textOn="Lock On"
        android:textOff="Lock Off"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/view5"/>

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3CDCD"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_below="@id/userinfo_screen_lock"/>
</RelativeLayout>