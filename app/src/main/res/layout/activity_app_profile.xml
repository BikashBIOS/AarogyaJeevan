            android:layout_height="30dp"
            android:layout_below="@id/view3"
            android:layout_toEndOf="@id/userinfo_app_color"
            android:background="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/userinfo_app_color"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_below="@id/view3"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="-4dp"
            android:layout_toEndOf="@id/img_language"
            android:fontFamily="@font/lato_bolditalic"
            android:text="@string/my_appcolor"
            android:textColor="#615A5A"
            android:textSize="18sp" />

            <View
                android:id="@+id/viewExtra"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D3CDCD"
                android:layout_marginTop="10dp"
                android:layout_marginStart="0dp"
                android:layout_below="@id/userinfo_app_color"/>

        <ImageView
            android:id="@+id/img_course"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_live_tv"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
