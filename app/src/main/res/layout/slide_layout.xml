<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/slideImage"
        android:layout_width="286dp"
        android:layout_height="215dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        app:srcCompat="@drawable/viewpager1"
        android:contentDescription="Features"/>


    <TextView
        android:id="@+id/slideHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:layout_marginTop="5dp"
        android:text="Tracking"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_Primary"
        android:textSize="20sp"
        android:layout_below="@id/slideImage"/>

    <TextView
        android:id="@+id/slideDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slideHeading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/lato_bold"
        android:padding="25dp"
        android:text="Provide you online councelling from our best doctors along with health,fit tips. Available for 24x7"
        android:textAlignment="center"
        android:textColor="#242121"
        android:textSize="18sp" />
</RelativeLayout>