    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_below="@id/toolbar_setting"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center"
        android:id="@+id/image_profile"
        android:layout_marginTop="30dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:layout_below="@id/toolbar_setting"
        android:textColor="#615A5A"
        android:id="@+id/userinfo_phone_number"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:fontFamily="@font/lato_bolditalic"
        android:text="6371669131"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:textSize="20sp"
        android:layout_toEndOf="@id/image_profile"/>

    <TextView
        android:textColor="#615A5A"
    android:id="@+id/userinfo_name"
    android:layout_width="match_parent"
    android:layout_height="30sp"
    android:text="Subham Mohanta"
    android:fontFamily="@font/lato_bolditalic"
    android:layout_marginTop="20dp"
    android:textSize="18sp"
        android:padding="5dp"
        android:layout_marginStart="15dp"
    android:layout_below="@id/userinfo_phone_number"
    android:layout_toEndOf="@id/image_profile"/>

    <TextView
        android:id="@+id/userinfo_email"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="subhammohanta27@gmail.com"
        android:textColor="#615A5A"
        android:padding="5dp"
        android:fontFamily="@font/lato_bolditalic"
        android:layout_marginTop="0dp"
        android:textSize="14sp"
        android:layout_below="@id/userinfo_name"
        android:layout_toEndOf="@id/image_profile"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/userinfo_editting"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:text="Edit Details"
        android:layout_marginStart="15dp"
        android:textColor="@color/colorPrimary"
        android:padding="5dp"
        android:fontFamily="@font/lato_bolditalic"
        android:layout_marginTop="0dp"
        android:textSize="12sp"
        android:layout_below="@id/userinfo_email"
        android:layout_toEndOf="@id/image_profile"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3CDCD"
        android:layout_below="@id/userinfo_editting"/>

    <ImageView
        android:id="@+id/img_location"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_add_location"
        android:layout_below="@id/view1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/userinfo_location"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="My Address"
        android:layout_marginStart="15dp"
        android:textSize="18sp"
        android:textColor="#615A5A"
        android:fontFamily="@font/lato_bolditalic"
        android:layout_below="@id/view1"
        android:layout_toEndOf="@id/img_location"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3CDCD"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_below="@id/userinfo_location"/>

    <TextView
    android:id="@+id/img_language"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:text="A"
    android:textColor="@color/colorPrimary"
    android:textSize="20sp"
    android:fontFamily="@font/poppins_semibold"
    android:textAlignment="center"
    android:layout_below="@id/view2"
    android:layout_marginTop="18dp"
    android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/userinfo_language"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="My Language"
        android:layout_marginStart="15dp"
        android:textSize="18sp"
        android:textColor="#615A5A"
        android:fontFamily="@font/lato_bolditalic"
        android:layout_below="@id/view2"
        android:layout_toEndOf="@id/img_language"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3CDCD"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_below="@id/userinfo_language"/>

    <ImageView
        android:id="@+id/img_color"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_color_lens"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_semibold"
        android:textAlignment="center"
        android:layout_below="@id/view3"
        android:layout_marginTop="18dp"
        android:layout_marginStart="10dp"/>

